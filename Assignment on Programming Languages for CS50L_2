import random


def ensure_number(user_attempt):
    res = -1
    if user_attempt.isdigit():
        res = int(user_attempt)
    if 0 > res < 26:
        res = -1
    return res


def input_integer(msg):
    user_attempt = input(msg)
    user_attempt = ensure_number(user_attempt)
    return user_attempt


def print_hint(guess_me, user_attempt):
    if user_attempt == -1:
        print(f"Attempt invalid")
    elif guess_me > user_attempt:
        print(f"({user_attempt}) is not correct")
        print(f"Correct value is {guess_me}")
    elif guess_me < user_attempt:
        print(f"({user_attempt}) is not correct")
    elif guess_me == user_attempt:
        print(f"({user_attempt}) is correct")


def main():
    guess_me = random.randint(1, 10)
    user_attempt = input_integer("You have 1 attempt, guess the number between 1 and 10: ")
    print_hint(guess_me, user_attempt)
